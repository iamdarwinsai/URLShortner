<!DOCTYPE html>
<html lang="en">
<head>  
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
</head>
<body>
    <h1>URL shortener</h1>
    <% if (locals.id) { %>
     <p>URL generated is :http://localhost:4000/url/<%= id %></p>
    <% } %>
    <div>
        <form method="POST" action="/url/">
            <label for="s">Enter your URL</label>
            <input type="text" name="url" placeholder="https://example" id="s">
            <button type="submit">Generate</button>
        </form>
    </div>
    <div>
        <% if (locals.urls) { %>
            <table>
                <thead>
                    <th>S. NO</th>
                    <th>shortId</th>
                    <th>Redirect link</th>
                    <th>Clicks</th>
                </thead>
                <tbody>
                    <% urls.forEach((url,index) => { %>
                        <tr>
                     <td><%= index+1 %></td>
                     <td><%= url.shortId %></td>
                     <td><%= url.redirectedURL %></td>
                     <td><%= url.visitedHistory.length %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </div>
</body> 
</html>  